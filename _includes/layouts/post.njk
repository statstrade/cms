---
layout: layouts/base.njk
section: post
---
<article>

  <h1>{{ title }}</h1>

  {% if summary %}
    <p>{{ summary }}</p>
  {% endif %}

  <p>
    <small>
      Posted on
      <time datetime="{{ page.date | machineDate }}">
        {{ page.date | readableDate }}
      </time>
      by
      <a href="/authors/{{ author | slug}}">{{ author }}</a>
      {% if tags %}
        in
        {% for tag in tags %}
          {%- if tag != "post" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
            {%- if loop.last %}{% else %},{% endif -%}
          {%- endif -%}
        {% endfor %}
      {% endif %}
    </small>
  </p>

  {% if image %}
    <img src="{{ image }}" alt="{{ imageAltText or title }}" style="max-width: 100%; height: auto; display: block; margin: 1em 0;">
  {% endif %}

  {{ layoutContent | safe }}

</article>

{% include "components/nav-back.njk" %}
