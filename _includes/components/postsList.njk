<section>

	{% for post in postsList | reverse %}

		<article>

			<a href="{{ post.url | url }}">

				{% if post.data.image %}
					<img src="{{ addPrefix post.data.image }}" alt="{{ post.data.imageAltText or post.data.title }}" loading="lazy">
				{% endif %}

				<h3>{{ post.data.title }}</h3>
				
			</a>
			
			<time datetime="{{ post.date | machineDate }}">
				<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
			</time>

		</article>
	{% endfor %}
</section>
